# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ticketing_system
DB_USER=postgres
DB_PASSWORD=your_password_here

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
SESSION_COOKIE_NAME=connect.sid

# Xero OAuth Configuration
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=http://localhost:3001/api/xero/callback
XERO_SCOPES=accounting.transactions accounting.contacts

# ENCRYPTION_KEY - 32-byte hex string for encrypting Xero OAuth tokens (AES-256-CBC)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Use different keys for dev/staging/production. Never commit actual keys.
ENCRYPTION_KEY=

# AI_ENCRYPTION_KEY - 32-byte hex string for encrypting OpenAI API keys at rest (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Use a DIFFERENT key from ENCRYPTION_KEY. Never reuse encryption keys across services.
AI_ENCRYPTION_KEY=

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:8080

# Google Drive OAuth Configuration
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/backup/google-drive/callback

# Timezone
TZ=America/Chicago
