# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ticketing_system
DB_USER=postgres
DB_PASSWORD=your_password_here

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
SESSION_COOKIE_NAME=connect.sid
# COOKIE_DOMAIN - Set to .zollc.com in production to share cookies across subdomains (website + Outlook add-in)
# Leave empty or set to undefined for localhost development
COOKIE_DOMAIN=

# Debug Configuration
# Set to 'true' to enable detailed session debugging logs (for troubleshooting authentication issues)
# WARNING: Only enable temporarily for debugging - logs contain session metadata
# Performance impact: Minimal (logs only when requests occur)
DEBUG_SESSIONS=false

# Xero OAuth Configuration
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=http://localhost:3001/api/xero/callback
XERO_SCOPES=accounting.transactions accounting.contacts

# ENCRYPTION_KEY - 32-byte hex string for encrypting Xero OAuth tokens (AES-256-CBC)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Use different keys for dev/staging/production. Never commit actual keys.
ENCRYPTION_KEY=

# AI_ENCRYPTION_KEY - 32-byte hex string for encrypting OpenAI API keys at rest (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Use a DIFFERENT key from ENCRYPTION_KEY. Never reuse encryption keys across services.
AI_ENCRYPTION_KEY=

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:8080

# Google Drive OAuth Configuration
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/backup/google-drive/callback

# Timezone
TZ=America/Chicago

# Lenovo Warranty API Configuration
# Required for automatic warranty lookup for Lenovo devices
# Contact Lenovo Support to obtain an API key: https://supportapi.lenovo.com
LENOVO_API_KEY=your_lenovo_api_key_here

# Asset Cache Configuration
# ASSET_CACHE_TTL - Time-to-live for asset cache in seconds
# 0 = indefinite (manual invalidation only), or positive number (e.g., 86400 for 24 hours)
# Default: 0 (cache never expires, only invalidated manually or on asset changes)
ASSET_CACHE_TTL=0
