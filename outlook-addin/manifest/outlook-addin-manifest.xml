<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Manifest Metadata -->
  <!-- UUID uniquely identifying the add-in - NEVER CHANGE THIS VALUE -->
  <Id>a5598e8c-d985-4ada-aced-2912195945a2</Id>

  <!-- Manifest version in Office format (major.minor.patch.build) -->
  <Version>1.0.0.0</Version>

  <!-- Provider/Organization Information -->
  <ProviderName>ZO, LLC</ProviderName>

  <!-- Add-in Display Information -->
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Tickets"/>
  <Description DefaultValue="Convert Outlook emails into support tickets with automatic contact matching"/>

  <!-- Icon URLs - Using placeholder icons for MVP -->
  <!-- Production: Replace with branded icons hosted at outlook-addin.zollc.com -->
  <IconUrl DefaultValue="https://via.placeholder.com/32x32.png"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/80x80.png"/>

  <!-- Support Information -->
  <SupportUrl DefaultValue="https://zollc.com/support"/>

  <!-- App Domains - Domains the add-in can navigate to -->
  <AppDomains>
    <AppDomain>https://localhost:5173</AppDomain>
    <AppDomain>https://ticketapi.zollc.com</AppDomain>
  </AppDomains>

  <!-- Supported Office Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Requirements - Minimum Office.js version -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <!-- Form Settings - Defines add-in behavior for different email scenarios -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <!-- Task pane source URL - Development server -->
        <!-- Production: Replace with https://outlook-addin.zollc.com -->
        <SourceLocation DefaultValue="https://localhost:5173"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Required Office.js API Permissions -->
  <!-- ReadItem: Read-only access to email metadata (sender, subject, body) -->
  <Permissions>ReadItem</Permissions>

  <!-- Rule for when add-in is activated -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <!-- Extended Permissions and UI Customization -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- Extension Points - Where add-in appears in Outlook UI -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>

                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources - String and Image Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://via.placeholder.com/16x16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://via.placeholder.com/32x32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://via.placeholder.com/80x80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:5173"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Email to Ticket"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Create Ticket"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open task pane to convert this email into a support ticket"/>
      </bt:LongStrings>
    </Resources>

    <!-- VersionOverrides 1.1 for Pinnable Task Pane Support -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <!-- Extension Points - Where add-in appears in Outlook UI -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>

                  <!-- Task Pane Button with Pinning Support -->
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                      <SupportsPinning>true</SupportsPinning>
                      <SupportsNoItemContext>true</SupportsNoItemContext>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <!-- Resources - String and Image Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://via.placeholder.com/16x16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://via.placeholder.com/32x32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://via.placeholder.com/80x80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:5173"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Email to Ticket"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Create Ticket"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open task pane to convert this email into a support ticket"/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
